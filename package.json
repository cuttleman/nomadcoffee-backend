{
  "name": "nomadcoffee-backend",
  "version": "1.0.0",
  "description": "is challenge for instaclone with Nomad Coders.",
  "main": "src/server.ts",
  "repository": "https://github.com/cuttleman/nomadcoffee-backend.git",
  "author": "cuttleman <silluat11@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start:dev": "nodemon --exec ts-node src/server.ts --ext js,ts",
    "generate": "npx prisma migrate dev --schema=./src/prisma/schema.prisma && npx prisma generate --schema=./src/prisma/schema.prisma",
    "build_generate": "npx prisma generate --schema=./build/prisma/schema.prisma",
    "copy_all": "yarn copy src/prisma/**/*.{prisma,sql} build/prisma & cp -r src/uploads build ",
    "studio": "npx prisma studio --schema=./src/prisma/schema.prisma",
    "is_migration": "prisma migrate resolve --applied <migrated name>",
    "prebuild": "rm -rf build",
    "build": "tsc",
    "postbuild": "yarn copy_all & yarn build_generate",
    "start": "PRODUCTION=true node build/server"
  },
  "dependencies": {
    "@babel/core": "^7.14.3",
    "@babel/node": "^7.14.2",
    "@babel/preset-env": "^7.14.2",
    "@babel/runtime": "^7.14.0",
    "@graphql-tools/load-files": "^6.3.2",
    "@graphql-tools/merge": "^6.2.14",
    "@prisma/client": "^2.24.0",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.12",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/morgan": "^1.9.2",
    "@types/node": "^15.6.1",
    "@types/uuid": "^8.3.0",
    "apollo-server": "^2.24.1",
    "apollo-server-express": "^2.25.0",
    "bcrypt": "^5.0.1",
    "copy": "^0.3.2",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "graphql": "^15.5.0",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "prisma": "^2.24.0",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.2",
    "uuid": "^8.3.2",
    "yarn": "^1.22.10"
  },
  "devDependencies": {
    "nodemon": "^2.0.7"
  },
  "resolutions": {
    "**/**/fs-capacitor": "^6.2.0",
    "**/graphql-upload": "^11.0.0"
  }
}
